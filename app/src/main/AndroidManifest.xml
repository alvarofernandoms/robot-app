<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.br.robot_app" >

    <!-- Wireless connection permission -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="ANDROID.PERMISSION.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- Splash Screen -->
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Alfa Screen -->
        <activity
            android:name=".activity.AlfaActivity"
            android:screenOrientation="portrait">
        </activity>

        <!-- WifiConnection Management Screen-->
        <activity
            android:name=".activity.WifiConnection"
            android:screenOrientation="portrait">
        </activity>

        <!-- Sequence Program Screen-->
        <activity
            android:name=".activity.SequenceActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.br.robot_app.activity.AlfaActivity" />
        </activity>

        <!-- Program List Screen-->
        <activity android:name=".activity.ProgramListActivity"/>

    </application>

</manifest>
